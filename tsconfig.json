{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "es5",
		"module": "esnext",
		"lib": ["es2017"],
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
